<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5000000"
    android:clickable="true"
    android:focusable="true">

    <!-- Main content container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingHorizontal="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- App branding -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="un:short"
            android:textSize="32sp"
            android:fontFamily="sans-serif-black"
            android:textColor="#FFFFFF"
            android:letterSpacing="0.05"
            android:alpha="0.95" />

        <!-- Main title with emoji -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="잠깐! 🛑"
            android:textSize="42sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:textColor="#FFFFFF"
            android:textAlignment="center" />

        <!-- Message -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="쇼츠를 보려고 하시는군요"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:alpha="0.9"
            android:lineSpacingExtra="6dp"
            android:paddingHorizontal="24dp" />

        <!-- Reflection message -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="정말 지금 쇼츠를 봐야 할까요?"
            android:textSize="22sp"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-light"
            android:lineSpacingExtra="4dp"
            android:alpha="0.7" />

        <!-- Button container -->
        <LinearLayout
            android:id="@+id/buttonContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Horizontal button group for watch/skip -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <!-- Start timer button (shown when timer not completed) -->
                <TextView
                    android:id="@+id/startTimerButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_timer"
                    android:text="타이머 시작"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1A1A1A"
                    android:paddingHorizontal="32dp"
                    android:paddingVertical="14dp"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:fontFamily="sans-serif-medium"
                    android:visibility="visible" />

                <!-- Watch button (shown after timer completed) - LEFT/PRIMARY -->
                <TextView
                    android:id="@+id/watchButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_watch"
                    android:text="볼래요"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:paddingHorizontal="32dp"
                    android:paddingVertical="14dp"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:fontFamily="sans-serif-medium"
                    android:visibility="gone" />

                <!-- Spacer -->
                <View
                    android:id="@+id/buttonSpacer"
                    android:layout_width="16dp"
                    android:layout_height="0dp"
                    android:visibility="visible" />

                <!-- Skip button (always visible) - RIGHT/SECONDARY -->
                <TextView
                    android:id="@+id/skipButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_skip"
                    android:text="안볼래요"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1A1A1A"
                    android:paddingHorizontal="32dp"
                    android:paddingVertical="14dp"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:fontFamily="sans-serif-medium"
                    android:visibility="visible" />

            </LinearLayout>

            <!-- App settings button (always visible) -->
            <TextView
                android:id="@+id/appSettingsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/button_transparent"
                android:text="앱 설정 열기"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:paddingHorizontal="24dp"
                android:paddingVertical="10dp"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="sans-serif-medium"
                android:alpha="0.8"
                android:visibility="visible" />

        </LinearLayout>

    </LinearLayout>

    <!-- Bottom brand watermark -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="un:short"
        android:textSize="14sp"
        android:fontFamily="sans-serif-light"
        android:textColor="#FFFFFF"
        android:alpha="0.3"
        android:letterSpacing="0.1"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>