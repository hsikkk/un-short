<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/overlay_background"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:background="@android:color/white"
        android:elevation="8dp"
        android:orientation="vertical"
        android:padding="40dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

            <!-- App branding -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="un:short"
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-black"
                android:textColor="@color/primary_dark"
                android:letterSpacing="0.02" />

            <!-- Main title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/flip_phone_title"
                android:textSize="26sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/gray_900"
                android:textAlignment="center" />

            <!-- Message -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/flip_phone_message"
                android:textSize="16sp"
                android:textAlignment="center"
                android:textColor="@color/gray_600"
                android:lineSpacingExtra="4dp" />

            <!-- Flip status badge -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:background="@color/gray_100"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <View
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@color/error"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/flipStatusText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/flip_required"
                    android:textSize="14sp"
                    android:textColor="@color/gray_900"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

            <!-- Timer display -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/timerText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30"
                    android:textSize="88sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-black"
                    android:textColor="@color/accent_purple"
                    android:letterSpacing="-0.02" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-8dp"
                    android:text="초 남음"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/gray_500" />

            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="80dp"
                android:layout_height="3dp"
                android:layout_marginTop="32dp"
                android:background="@color/accent_purple_light"
                android:alpha="0.3" />

            <!-- Reflection message -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="이 시간 동안 생각해보세요:\n정말 지금 쇼츠를 봐야 할까요?"
                android:textSize="14sp"
                android:textAlignment="center"
                android:textColor="@color/gray_500"
                android:lineSpacingExtra="4dp"
                android:alpha="0.9" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
