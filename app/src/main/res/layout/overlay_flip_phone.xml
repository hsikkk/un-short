<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5000000"
    android:clickable="true"
    android:focusable="true">

    <!-- Main content container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingHorizontal="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- App branding -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="un:short"
            android:textSize="32sp"
            android:fontFamily="sans-serif-black"
            android:textColor="#FFFFFF"
            android:letterSpacing="0.05"
            android:alpha="0.95" />

        <!-- Main title with emoji -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="@string/flip_phone_title"
            android:textSize="32sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:textColor="#FFFFFF"
            android:textAlignment="center" />

        <!-- Message -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/flip_phone_message"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:alpha="0.8"
            android:lineSpacingExtra="6dp"
            android:paddingHorizontal="24dp" />

        <!-- Timer Container with accent background -->
        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="48dp"
            app:cardCornerRadius="100dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#1A8B5CF6">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <!-- Timer number -->
                <TextView
                    android:id="@+id/timerText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30"
                    android:textSize="96sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-black"
                    android:textColor="#8B5CF6"
                    android:letterSpacing="-0.03" />

                <!-- Seconds label -->
                <TextView
                    android:id="@+id/secondsLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-12dp"
                    android:text="초"
                    android:textSize="24sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="#8B5CF6"
                    android:alpha="0.8" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Flip status indicator -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/rounded_background"
            android:backgroundTint="#1AFFFFFF"
            android:paddingHorizontal="24dp"
            android:paddingVertical="12dp"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:id="@+id/flipStatusIndicator"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/circle_shape"
                android:backgroundTint="#EF4444"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/flipStatusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/flip_required"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-medium" />

        </LinearLayout>

        <!-- Reflection message -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:text="정말 지금 쇼츠를 봐야 할까요?"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-light"
            android:lineSpacingExtra="4dp"
            android:alpha="0.6" />

        <!-- Button container -->
        <LinearLayout
            android:id="@+id/buttonContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Watch button (hidden initially, shown after timer) - LEFT/PRIMARY -->
            <TextView
                android:id="@+id/watchButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_watch"
                android:text="볼래요"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:paddingHorizontal="32dp"
                android:paddingVertical="14dp"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="sans-serif-medium"
                android:visibility="gone" />

            <!-- Spacer (hidden initially) -->
            <View
                android:id="@+id/buttonSpacer"
                android:layout_width="16dp"
                android:layout_height="0dp"
                android:visibility="gone" />

            <!-- Skip button (always visible) - RIGHT/SECONDARY -->
            <TextView
                android:id="@+id/skipButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_skip"
                android:text="안볼래요"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1A1A1A"
                android:paddingHorizontal="32dp"
                android:paddingVertical="14dp"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="sans-serif-medium"
                android:visibility="visible" />

        </LinearLayout>

    </LinearLayout>

    <!-- Bottom brand watermark -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="un:short"
        android:textSize="14sp"
        android:fontFamily="sans-serif-light"
        android:textColor="#FFFFFF"
        android:alpha="0.3"
        android:letterSpacing="0.1"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>