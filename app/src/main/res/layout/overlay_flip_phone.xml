<?xml version="1.0" encoding="utf-8"?>
<!-- Overlay design based on tmp/overlay.html and tmp/styles.css -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2000000"
    android:clickable="true"
    android:focusable="true">

    <!-- Content Container (max-width: 600px in HTML, padding: 32px) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingHorizontal="32dp"
        android:maxWidth="600dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Brand Logo: 32px, font-weight: 900, letter-spacing: 1px, opacity: 0.95, margin-bottom: 60px -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="un:short"
            android:textSize="32sp"
            android:fontFamily="sans-serif-black"
            android:textColor="#FFFFFF"
            android:letterSpacing="0.06"
            android:alpha="0.95"
            android:layout_marginBottom="60dp" />

        <!-- Main Title: 42px, font-weight: 700, margin-bottom: 24px -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="잠깐"
            android:textSize="42sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            android:layout_marginBottom="24dp" />

        <!-- Message: 20px, opacity: 0.9, line-height: 1.5, margin-bottom: 60px -->
        <TextView
            android:id="@+id/mainMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이 쇼츠 꼭 봐야겠어요?"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:alpha="0.9"
            android:lineSpacingMultiplier="1.5"
            android:layout_marginBottom="60dp" />

        <!-- Reflection: 22px, font-weight: 300, opacity: 0.7, margin-bottom: 60dp -->
        <TextView
            android:id="@+id/reflectionMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지금 이 순간, 정말 필요한 건 뭘까요?"
            android:textSize="22sp"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-light"
            android:alpha="0.7"
            android:layout_marginBottom="60dp" />

        <!-- Button Container: flex column, gap: 12px, max-width: 320px, margin-top: 48px -->
        <LinearLayout
            android:id="@+id/buttonContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="48dp"
            android:maxWidth="320dp">

            <!-- Primary Button: padding: 18px 32px, border-radius: 12px, font-size: 16px, font-weight: 600 -->
            <TextView
                android:id="@+id/startTimerButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_primary_overlay"
                android:text="한 번 더 고민해보기"
                android:textSize="16sp"
                android:textColor="#000000"
                android:paddingHorizontal="32dp"
                android:paddingVertical="18dp"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="sans-serif-medium"
                android:visibility="visible" />

            <!-- Watch Button (shown after timer) -->
            <TextView
                android:id="@+id/watchButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_primary_overlay"
                android:text="네, 볼래요"
                android:textSize="16sp"
                android:textColor="#000000"
                android:paddingHorizontal="32dp"
                android:paddingVertical="18dp"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="sans-serif-medium"
                android:visibility="gone" />

            <!-- Secondary Button: background: transparent, border: 1px solid rgba(255,255,255,0.2), margin-top: 12px -->
            <TextView
                android:id="@+id/skipButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/btn_secondary_overlay"
                android:text="그냥 닫기"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:paddingHorizontal="32dp"
                android:paddingVertical="18dp"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="sans-serif-medium"
                android:visibility="visible" />

        </LinearLayout>

    </LinearLayout>

    <!-- Bottom Watermark: bottom: 32px, font-size: 14px, font-weight: 300, opacity: 0.3, letter-spacing: 2px -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="un:short"
        android:textSize="14sp"
        android:fontFamily="sans-serif-light"
        android:textColor="#FFFFFF"
        android:alpha="0.3"
        android:letterSpacing="0.12"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
