<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxHeight="600dp"
    android:background="@color/white"
    android:fillViewport="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/privacy_dialog_title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/primary_dark"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:letterSpacing="0.01"
            android:paddingBottom="24dp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_200"
            android:layout_marginBottom="24dp" />

        <!-- Why Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/privacy_why_title"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/gray_900"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/privacy_why_content"
            android:textSize="14sp"
            android:textColor="@color/gray_700"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="20dp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_200"
            android:layout_marginBottom="20dp" />

        <!-- Data Collection Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/privacy_data_title"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/gray_900"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="12dp" />

        <!-- Collected Data -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/privacy_data_collected"
                android:textSize="14sp"
                android:textColor="@color/gray_600"
                android:lineSpacingExtra="3dp" />

        </LinearLayout>

        <!-- Not Collected Data -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/privacy_data_not_collected"
            android:textSize="14sp"
            android:textColor="@color/gray_600"
            android:lineSpacingExtra="3dp"
            android:layout_marginBottom="20dp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_200"
            android:layout_marginBottom="20dp" />

        <!-- Usage Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/privacy_usage_title"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/gray_900"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/privacy_usage_content"
            android:textSize="14sp"
            android:textColor="@color/gray_700"
            android:lineSpacingExtra="3dp"
            android:layout_marginBottom="20dp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_200"
            android:layout_marginBottom="20dp" />

        <!-- Storage Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/privacy_storage_title"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/gray_900"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/privacy_storage_content"
            android:textSize="14sp"
            android:textColor="@color/gray_700"
            android:lineSpacingExtra="3dp"
            android:layout_marginBottom="20dp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_200"
            android:layout_marginBottom="20dp" />

        <!-- FAQ Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/privacy_faq_title"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/gray_900"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/privacy_faq_content"
            android:textSize="14sp"
            android:textColor="@color/gray_700"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="24dp" />

        <!-- Bottom divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_900"
            android:layout_marginBottom="24dp" />

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/btnExit"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/privacy_btn_exit"
                android:textColor="@color/gray_600"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnAgree"
                style="@style/Widget.App.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/privacy_btn_agree"
                android:textSize="14sp"
                android:paddingStart="24dp"
                android:paddingEnd="24dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
