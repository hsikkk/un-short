<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Top Section - Black Background -->
    <LinearLayout
        android:id="@+id/topSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#000000"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Header with Settings Icon -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Header Content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="32dp"
                android:paddingTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="un:short"
                android:textSize="26sp"
                android:fontFamily="sans-serif-thin"
                android:textColor="#FFFFFF"
                android:letterSpacing="-0.02" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="쇼츠 콘텐츠에서 벗어나세요.\n의도적인 소비를 위한 작은 습관."
                android:textSize="12sp"
                android:fontFamily="sans-serif-thin"
                android:textColor="#FFFFFF"
                android:alpha="0.5"
                android:layout_marginTop="8dp"
                android:lineSpacingExtra="2dp" />

            </LinearLayout>

            <!-- Settings Icon -->
            <ImageView
                android:id="@+id/settingsButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:src="@drawable/ic_settings"
                android:tint="#FFFFFF"
                android:alpha="0.7"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="4dp" />

        </RelativeLayout>

    </LinearLayout>

    <!-- Middle Section - White Background -->
    <LinearLayout
        android:id="@+id/middleSection"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/topSection"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Toggle Switch Container -->
        <FrameLayout
            android:id="@+id/toggleContainer"
            android:layout_width="180dp"
            android:layout_height="90dp"
            android:background="@drawable/toggle_track_background"
            android:clickable="true"
            android:focusable="true">

            <!-- ON Text -->
            <TextView
                android:id="@+id/onText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="30dp"
                android:text="ON"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="#FFFFFF"
                android:alpha="0.4"
                android:letterSpacing="0.1" />

            <!-- OFF Text -->
            <TextView
                android:id="@+id/offText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:layout_marginEnd="30dp"
                android:text="OFF"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="#000000"
                android:alpha="0.0"
                android:letterSpacing="0.1" />

            <!-- Toggle Circle with Icon -->
            <androidx.cardview.widget.CardView
                android:id="@+id/toggleCircle"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_vertical|end"
                android:layout_marginEnd="5dp"
                app:cardCornerRadius="40dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFFFFF">

                <ImageView
                    android:id="@+id/powerIcon"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_power"
                    android:contentDescription="Power toggle" />

            </androidx.cardview.widget.CardView>

        </FrameLayout>

        <!-- Status Text -->
        <TextView
            android:id="@+id/statusTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="차단 중"
            android:textSize="20sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#000000"
            android:letterSpacing="-0.02" />

        <!-- Platform Info -->
        <TextView
            android:id="@+id/platformInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="YouTube Shorts • Instagram Reels"
            android:textSize="13sp"
            android:fontFamily="sans-serif"
            android:textColor="#000000"
            android:alpha="0.5" />

        <!-- Status Badge -->
        <TextView
            android:id="@+id/statusBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="보호 활성"
            android:textSize="11sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#FFFFFF"
            android:background="@drawable/status_badge_background"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:letterSpacing="0.05" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
