<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Top Section - Black Background -->
    <LinearLayout
        android:id="@+id/topSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#000000"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp"
            android:paddingTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="un:short"
                android:textSize="26sp"
                android:fontFamily="sans-serif-thin"
                android:textColor="#FFFFFF"
                android:letterSpacing="-0.02" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="쇼츠 콘텐츠에서 벗어나세요.\n의도적인 소비를 위한 작은 습관."
                android:textSize="12sp"
                android:fontFamily="sans-serif-thin"
                android:textColor="#FFFFFF"
                android:alpha="0.5"
                android:layout_marginTop="8dp"
                android:lineSpacingExtra="2dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Middle Section - White Background -->
    <LinearLayout
        android:id="@+id/middleSection"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/topSection"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Power Button with Shadow -->
        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:cardCornerRadius="60dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#000000">

            <FrameLayout
                android:id="@+id/powerButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:focusable="true">

                <!-- Power Icon -->
                <ImageView
                    android:id="@+id/powerIcon"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_power"
                    android:contentDescription="Power button" />

            </FrameLayout>

        </androidx.cardview.widget.CardView>

        <!-- Status Text -->
        <TextView
            android:id="@+id/statusTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="차단 활성화됨"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:textColor="#000000"
            android:alpha="0.8"
            android:letterSpacing="0.01" />

        <!-- Status Indicator -->
        <LinearLayout
            android:id="@+id/statusIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Status Dot -->
            <View
                android:id="@+id/statusDot"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:background="@drawable/status_dot_active" />

            <!-- Status Label -->
            <TextView
                android:id="@+id/statusLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="ACTIVE"
                android:textSize="11sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="#000000"
                android:alpha="0.4"
                android:letterSpacing="0.08" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
