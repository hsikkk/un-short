<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Top Message -->
    <TextView
        android:id="@+id/topMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="'한 번 더 생각해보기'를 누르면\n타이머가 시작돼요"
        android:textSize="20sp"
        android:textColor="#000000"
        android:fontFamily="sans-serif"
        android:alpha="0.8"
        android:textAlignment="center"
        android:lineSpacingExtra="6dp"
        android:layout_marginTop="48dp"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Phone Mockup Container -->
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="48dp"
        android:clipChildren="true"
        app:layout_constraintTop_toBottomOf="@id/topMessage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.9">

        <!-- Phone Frame -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/phone_frame_background"
            android:elevation="8dp">

            <!-- Timer Screen -->
            <LinearLayout
                android:id="@+id/previewTimerScreen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="20dp">

                <!-- Timer Container -->
                <FrameLayout
                    android:id="@+id/previewTimerContainer"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginBottom="32dp">

                    <!-- Progress Ring -->
                    <ProgressBar
                        android:id="@+id/previewProgressRing"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:progressDrawable="@drawable/progress_ring_dark"
                        android:max="1000"
                        android:progress="1000"
                        android:rotation="-90" />

                    <!-- Timer Display -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:gravity="center">

                        <!-- Timer Number -->
                        <TextView
                            android:id="@+id/previewTimerNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10"
                            android:textSize="56sp"
                            android:textColor="#FFFFFF"
                            android:fontFamily="sans-serif-thin"
                            android:includeFontPadding="false" />

                        <!-- Timer Unit -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="seconds"
                            android:textSize="13sp"
                            android:textColor="#8A8A8A"
                            android:fontFamily="sans-serif-light"
                            android:letterSpacing="0.08"
                            android:textAllCaps="true" />

                    </LinearLayout>

                </FrameLayout>

                <!-- Instructions -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingHorizontal="32dp">

                    <!-- Title -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="잠시 생각해보기"
                        android:textSize="17sp"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif"
                        android:layout_marginBottom="8dp" />

                    <!-- Description -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="폰을 뒤집고 진짜 봐야 하는지\n생각해보세요"
                        android:textSize="14sp"
                        android:textColor="#8A8A8A"
                        android:fontFamily="sans-serif-light"
                        android:gravity="center"
                        android:lineSpacingMultiplier="1.5" />

                </LinearLayout>

                <!-- Flip Indicator -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="28dp"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="12dp"
                    android:background="@drawable/flip_indicator_dark">

                    <!-- Phone Icon -->
                    <View
                        android:layout_width="14dp"
                        android:layout_height="22dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/phone_icon_white" />

                    <!-- Flip Text -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="폰을 뒤집어주세요"
                        android:textSize="13sp"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif-light" />

                </LinearLayout>

            </LinearLayout>

            <!-- Success Screen (hidden initially) -->
            <LinearLayout
                android:id="@+id/previewSuccessScreen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="24dp"
                android:visibility="gone"
                android:alpha="0">

                <!-- Success Icon -->
                <View
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/success_circle" />

                <!-- Brand -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="un:short"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:letterSpacing="0.03125"
                    android:layout_marginBottom="24dp" />

                <!-- Success Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="해냈어요!"
                    android:textSize="24sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <!-- Success Message -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="잠시 멈춰본 당신, 멋져요\n이제 더 현명한 선택을 할 수 있을 거예요"
                    android:textSize="16sp"
                    android:textColor="#6B6B6B"
                    android:gravity="center"
                    android:lineSpacingMultiplier="1.5"
                    android:layout_marginBottom="32dp" />

            </LinearLayout>

        </FrameLayout>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
