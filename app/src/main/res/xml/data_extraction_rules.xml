<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Exclude session data (temporary) -->
        <exclude domain="sharedpref" path="app_prefs.xml" />

        <!-- Include user settings -->
        <include domain="sharedpref" path="." />
    </cloud-backup>

    <!-- Android 12+ device transfer rules -->
    <device-transfer>
        <!-- Exclude session data -->
        <exclude domain="sharedpref" path="app_prefs.xml" />

        <!-- Include user settings -->
        <include domain="sharedpref" path="." />
    </device-transfer>
</data-extraction-rules>
