<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_medium</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/accent_purple</item>
        <item name="colorSecondaryVariant">@color/accent_purple_light</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Button Style -->
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
        <item name="android:textColorPrimary">@color/gray_900</item>
        <item name="android:textColorSecondary">@color/gray_600</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
    </style>
</resources>
